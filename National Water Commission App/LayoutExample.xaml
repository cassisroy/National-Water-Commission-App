<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="National_Water_Commission_App.LayoutExample"
             Title="LayoutExample">
    <VerticalStackLayout x:Name="VStackLayout" Padding="{OnPlatform iOS='30,10,30,10', Default='30'}"
                         BackgroundColor="{OnPlatform iOS=Green, Android=AliceBlue}">
        <Label 
            Text="Serving You In So Many Ways"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid ColumnDefinitions="Auto, 30, Auto">
            <Button Grid.Column="0" Text="Test Button" WidthRequest="100" />
            <Button Grid.Column="2" Text="Test Button" WidthRequest="100" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>