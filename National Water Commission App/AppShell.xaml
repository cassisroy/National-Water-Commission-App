<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="National_Water_Commission_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:National_Water_Commission_App"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Home">
            <ShellContent
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />
        </Tab>

        <Tab Title="About">
            <ShellContent
     ContentTemplate="{DataTemplate local:LayoutExample}"
     Route="LayoutExample" />
        </Tab>

        <Tab Title="Contact">
            <ShellContent
 ContentTemplate="{DataTemplate local:NewPage1}"
 Route="NewPage1" />
        </Tab>

        <Tab Title="Pay Bill">
            <ShellContent
 ContentTemplate="{DataTemplate local:TestPage}"
 Route="TestPage" />

        </Tab>
    </TabBar>

</Shell>
